<RecordForm>:  

    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            #size_hint: [0.6, .8]
            size_hint: [1, .8]
            Graph:
                id: graph
                xlabel: ""
                ylabel: "Level"
                ymin:-1
                ymax:1
                y_ticks_major:0.25
                background_color: 0, 0, 1, 1
        BoxLayout:
            size_hint: [1, .2]
            orientation: "horizontal"
            Button:
                text: "START"
                bold: True
                on_press: root.start_record()
            Button:
                text: "STOP"
                bold: True
                on_press: root.stop_close_audio(),app.remove_record_layout()  

